{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "program": "start",
            "name": "Frontend",
            "cwd": "${workspaceFolder}/frontend",
            "url": "https://localhost",
            "webRoot": "${workspaceFolder}/frontend",
            "envFile": "${workspaceFolder}/frontend/.debug.env"
        },
        {
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "program": "start",
            "name": "Backend",
            "cwd": "${workspaceFolder}/backend",
            "skipFiles": [
                "${workspaceFolder}/backend/<node_internals>/**"
            ],
            "envFile": "${workspaceFolder}/backend/.debug.env"
        },
        {
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "yarn",
            "program": "develop",
            "name": "CMS",
            "cwd": "${workspaceFolder}/cmsstrapi",
            "skipFiles": [
                "${workspaceFolder}/cms/<node_internals>/**"
            ],
            "envFile": "${workspaceFolder}/cms/.debug.env",
            "console": "integratedTerminal"
        },
    ]
}